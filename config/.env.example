# API配置
DEEPSEEK_API_KEY=your_api_key_here

# 告警配置
ENABLE_EMAIL=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Server酱推送配置
ENABLE_PUSH=true
SERVER_CHAN_KEY=your_server_chan_key_here  # 从 https://sct.ftqq.com/ 获取

# 推送配置
PUSH_HOST=0.0.0.0
PUSH_PORT=8080
VAPID_PUBLIC_KEY=your_vapid_public_key  # 使用 web-push generate-vapid-keys 生成
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUB=mailto:your_email@example.com 